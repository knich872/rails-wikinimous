<div class="container">
  <div class="row mt-4">
    <h1 class="my-4 ml-4 bg-light-subtle"><%= @article.title %></h1>
    <i class="mt-4 mx-1 pt-2">
      <%= link_to '',
      edit_article_path,
      class: "mx-2 fa-xl fa-solid fa-pencil"
      %>
    </i>
    <i class="mt-4 mx-1 pt-2">
      <%= link_to '',
      article_path(@article),
      class: "mx-2 fa-xl fa-solid fa-trash-can text-danger",
      data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}
      %>
    </i>
  </div>
  <p class="col-9"><%= @article.content %></p>
  <div class="mx-4">
    <%= link_to("<- Back to main page", articles_path) %>
  </div>
</div>
